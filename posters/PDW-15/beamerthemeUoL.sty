\setbeamercolor{headline}{fg=uol-purple, bg=white}
\setbeamercolor{footline}{fg=white, bg=uol-purple}
\setbeamerfont{footline}{size=\large,series=\tt}
\setbeamercolor{separation line}{bg=uol-purple}
\setbeamercolor{title in headline}{fg=uol-purple}
\setbeamercolor{author in headline}{fg=uol-purple!75!white}
