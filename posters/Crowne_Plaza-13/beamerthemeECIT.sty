\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.02\paperwidth}
          \includegraphics[width=3\linewidth]{../../figures/logo_QUB_V_w}
      \end{column}
      \begin{column}{.6\paperwidth}
        \vskip11ex
        \raggedleft
        \usebeamercolor{title in headline}{\color{fg}\textsc{\LARGE{\inserttitle}}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\textsc{\large{\insertinstitute}}\\[1ex]}     
        \usebeamercolor{author in headline}{\color{fg}\textsc{\huge{\insertauthor}}\\[1ex]}
      \end{column}
      \begin{column}{.3\paperwidth}
        \vskip8ex
        \begin{minipage}{\linewidth}
          \centering
          \hspace*{4ex}
          \raisebox{-0.5\height}{\includegraphics[width=.4\linewidth]{../../figures/logo_ECIT}}
          \hspace*{4ex}
          \raisebox{-0.5\height}{\includegraphics[width=.3\linewidth]{../../figures/logo_DSTL}}
          \hspace*{4ex}
          \raisebox{-0.5\height}{\colorbox{white}{\includegraphics[width=.15\linewidth]{../../figures/logo_DGA_trimmed}}}
        \end{minipage}
      \end{column}
      \begin{column}{.01\paperwidth}
      \end{column}
    \end{columns}
    \vskip2ex
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}

