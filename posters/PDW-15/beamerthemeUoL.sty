          \raisebox{-0.5\height}{\includegraphics[width=.2\linewidth]{../../Logos/logo_DGA_trimmed}}
        \end{center}
      \end{column}
      \begin{column}{.01\paperwidth}
      \end{column}
    \end{columns}
    \vskip2ex
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}

